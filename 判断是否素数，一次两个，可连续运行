#include<stdio.h>
int main()
{
	int a[2]={1,1},i,b,c=0;
  while(a[0]!=0&&a[1]!=0)
  {printf("Please input two numbers:");
  scanf("%d%d",&a[0],&a[1]);
  for(c=0;c<=1;c++)
  {b=0;
	  for(i=2;i*i<=a[c];i++)
  if(a[c]%i==0)b=1;
      if(b==1)
        printf("%d is not a prime\n",a[c]);
    else
        printf("%d is a prime\n",a[c]);}}
  return 0;
}
